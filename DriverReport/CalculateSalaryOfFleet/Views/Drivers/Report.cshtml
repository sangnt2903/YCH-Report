
@model IEnumerable<CalculateSalaryOfFleet.Models.ResultModelView>
@{
    ViewData["Title"] = "Report";
}

<div style="text-align:center"><h2>ExportReportToExcel</h2></div>
<div class="row" style="margin-bottom: 10px; text-align: center">
    <a asp-action="ExportReportToExcel" class="btn btn-success"><span class="glyphicon glyphicon-export"></span>&nbsp;Xuất báo cáo thông kê số tài</a>
</div>
<div class="container">
    <table class="table table-responsive table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Mã tài xế</th>
                <th scope="col">Tên tài xế</th>
                <th scope="col">Tổng số Jobs trong tháng</th>
                <th scope="col">Tổng số Drop point / Tổng số chuyến</th>
                <th scope="col">Tổng số trip</th>
            </tr>
        </thead>
        <tbody>

            @{
                var i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.DriverIcNo</td>
                        <td>@item.DriverName</td>
                        <td>@item.TotalJobsInMonth</td>
                        <td>@item.TotalDropPointOnTotalJobs</td>
                        <td>@item.TotalTrip</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>



